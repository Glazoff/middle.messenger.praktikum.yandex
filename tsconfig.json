{
    "compilerOptions": {
      "types": ["vite/client"],
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "strictNullChecks": true,
    },
    "include": ["src"]
  }
